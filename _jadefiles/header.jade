mixin nav-content()
  ul
    li: a(href="#home") HOME
    li: a(href="#about") ABOUT
    li: a(href="#our_services") OUR SERVICES
    li: a(href="/lawyers" target="_blank") OUR LAWYERS
    li: a(href="#contact_us") CONTACT US
    


header.header#home
  .hover-position
    .header-position
      nav.site-nav
        +nav-content()
      
      .mobile-nav-toggle: span

.mobile-nav
  +nav-content()
